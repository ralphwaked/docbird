{
  "extends": "@docbird/tsconfig/base",

  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "module": "esnext",

    "jsx": "preserve",

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },

    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
